{
  "name": "@curveball/static",
  "version": "0.4.0",
  "description": "A curveball middleware for serving static files from a filesystem",
  "type": "module",
  "exports": {
    "require": "./cjs/index.js",
    "import": "./esm/index.js"
  },
  "main": "cjs/index.js",
  "homepage": "https://github.com/curveball/static#readme",
  "bugs": {
    "url": "https://github.com/curveball/static/issues"
  },
  "keywords": [
    "http",
    "framework",
    "nodejs",
    "typescript",
    "push",
    "http2",
    "curveball"
  ],
  "author": "Evert Pot (https://evertpot.com/)",
  "license": "MIT",
  "scripts": {
    "prepublishOnly": "make build",
    "test": "make test",
    "lint": "make lint",
    "fix": "make fix",
    "tsc": "tsc",
    "start": "make start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/curveball/static.git"
  },
  "dependencies": {
    "mime-types": "^2.1.29"
  },
  "peerDependencies": {
    "@curveball/kernel": ">=0.21.0 <1"
  },
  "devDependencies": {
    "@curveball/kernel": "^0.21.0",
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mime-types": "^2.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.12",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.23.0",
    "mocha": "^10.2.0",
    "nyc": "^15.0.0",
    "sinon": "^15.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.1.5"
  },
  "engines": {
    "node": ">= 16"
  },
  "files": [
    "package.json",
    "README.md",
    "esm",
    "cjs",
    "LICENSE",
    "src"
  ],
  "mocha": {
    "loader": [
      "ts-node/esm"
    ],
    "recursive": true,
    "extension": [
      "ts",
      "js",
      "tsx"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ]
  }
}
